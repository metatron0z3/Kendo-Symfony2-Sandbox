<?php

namespace SDI\ChameleonBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Locales
 *
 * @ORM\Table(name="locales")
 * @ORM\Entity
 */
class Locales
{
    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer", nullable=false)
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="IDENTITY")
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(name="name", type="text", nullable=false)
     */
    private $name;

    /**
     * @var string
     *
     * @ORM\Column(name="iso", type="text", nullable=false)
     */
    private $iso;

    /**
     * @var string
     *
     * @ORM\Column(name="status", type="string", length=20, nullable=true)
     */
    private $status;

    /**
     * @var \SDI\ChameleonBundle\Entity\Languages
     *
     * @ORM\ManyToOne(targetEntity="SDI\ChameleonBundle\Entity\Languages")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="language_id", referencedColumnName="id")
     * })
     */
    private $language;

    /**
     * @var \SDI\ChameleonBundle\Entity\Countries
     *
     * @ORM\ManyToOne(targetEntity="SDI\ChameleonBundle\Entity\Countries")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="country_id", referencedColumnName="id")
     * })
     */
    private $country;


}
